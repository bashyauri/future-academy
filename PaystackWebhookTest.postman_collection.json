{
  "info": {
    "name": "Paystack Webhook Test",
    "description": "Test Paystack webhook endpoint with valid signature.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Charge Success Webhook",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "x-paystack-signature",
            "value": "{{paystack_signature}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"event\": \"charge.success\",\n  \"data\": {\n    \"status\": \"success\",\n    \"reference\": \"test_ref_123\",\n    \"amount\": 10000,\n    \"customer\": {\n      \"email\": \"test@example.com\"\n    },\n    \"plan\": {\n      \"plan_code\": \"PLN_123\",\n      \"interval\": \"monthly\"\n    },\n    \"subscription\": {\n      \"subscription_code\": \"SUB_123\",\n      \"next_payment_date\": \"2026-02-28T00:00:00Z\"\n    }\n  }\n}"
        },
        "url": {
          "raw": "https://futureacademy-rm.com/webhooks/paystack",
          "protocol": "https",
          "host": [
            "futureacademy-rm",
            "com"
          ],
          "path": [
            "webhooks",
            "paystack"
          ]
        }
      },
      "response": []
    }
  ],
  "variable": [
    {
      "key": "paystack_signature",
      "value": ""
    }
  ]
}
