{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacksConfigPath": "nixpacks.toml",
        "nixpacksPlan": {
            "phases": {
                "setup": {
                    "nixPkgs": ["php83"]
                }
            }
        }
    },
    "deploy": {
        "numReplicas": 1,
        "restartPolicyType": "ON_FAILURE",
        "healthcheckPath": "/",
        "healthcheckTimeout": 100
    }
}
